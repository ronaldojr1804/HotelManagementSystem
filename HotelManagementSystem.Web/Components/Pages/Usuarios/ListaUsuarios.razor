@page "/usuarios"
@attribute [Authorize(Roles = "Admin")]
@inject AuthService AuthService
@inject NavigationManager Navigation
@rendermode InteractiveServer
@using HotelManagementSystem.Web.Models

<div class="w-full px-6 pb-10">
    <div class="flex items-center justify-between mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Gestão de Usuários</h1>
        <button @onclick="OpenAddModal" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg shadow transition duration-200 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Novo Usuário
        </button>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="p-4 border-b border-gray-100 flex justify-between items-center bg-gray-50">
             <div class="relative w-64">
                <input type="text" @bind="searchTerm" @bind:event="oninput" @bind:after="SearchUsers" placeholder="Buscar usuário..." class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none text-sm" />
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 absolute left-3 top-2.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
            </div>
            <span class="text-sm font-medium text-gray-600">Total: <span class="text-gray-900 font-bold">@totalCount</span></span>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-gray-50 border-b border-gray-200 text-xs uppercase text-gray-500 font-semibold tracking-wider">
                        <th class="px-6 py-4">Nome</th>
                        <th class="px-6 py-4">Email</th>
                        <th class="px-6 py-4">Função</th>
                        <th class="px-6 py-4 text-right">Ações</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @if (users == null)
                    {
                        <tr><td colspan="4" class="px-6 py-8 text-center text-gray-500">Carregando...</td></tr>
                    }
                    else if (!users.Any())
                    {
                        <tr><td colspan="4" class="px-6 py-8 text-center text-gray-500 italic">Nenhum usuário encontrado.</td></tr>
                    }
                    else
                    {
                        @foreach (var user in users)
                        {
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-6 py-4 font-medium text-gray-800">@user.Nome</td>
                                <td class="px-6 py-4 text-gray-600">@user.Email</td>
                                <td class="px-6 py-4">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @GetRoleBadgeClass(user.Role)">
                                        @user.Role
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-right space-x-2">
                                    <button @onclick="() => EditUser(user)" class="text-blue-600 hover:text-blue-800 font-medium text-sm transition-colors">Editar</button>
                                    @if (user.Id != 1) // Prevent deleting default admin
                                    {
                                        <button @onclick="() => DeleteUser(user.Id)" class="text-red-600 hover:text-red-800 font-medium text-sm transition-colors">Excluir</button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="px-6 py-4 border-t border-gray-100 flex justify-between items-center bg-gray-50">
            <span class="text-sm text-gray-600">
                Mostrando @((currentPage - 1) * pageSize + 1) a @Math.Min(currentPage * pageSize, totalCount) de @totalCount registros
            </span>
            <div class="flex space-x-2">
                <button @onclick="PreviousPage" disabled="@(currentPage == 1)" class="px-3 py-1 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed">
                    Anterior
                </button>
                <button @onclick="NextPage" disabled="@(currentPage * pageSize >= totalCount)" class="px-3 py-1 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed">
                    Próxima
                </button>
            </div>
        </div>
    </div>
</div>

@if (showModal)
{
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 backdrop-blur-sm">
        <div class="bg-white rounded-2xl shadow-xl w-full max-w-md p-6">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">@(currentUser.Id == 0 ? "Novo Usuário" : "Editar Usuário")</h2>
            
            <EditForm Model="currentUser" OnValidSubmit="SaveUser">
                <DataAnnotationsValidator />
                
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Nome</label>
                        <InputText @bind-Value="currentUser.Nome" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none" />
                        <ValidationMessage For="@(() => currentUser.Nome)" class="text-red-500 text-xs mt-1" />
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                        <InputText @bind-Value="currentUser.Email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none" />
                        <ValidationMessage For="@(() => currentUser.Email)" class="text-red-500 text-xs mt-1" />
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Senha @(currentUser.Id != 0 ? "(Deixe em branco para manter)" : "")</label>
                        <input type="password" @bind="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none" />
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Função</label>
                        <InputSelect @bind-Value="currentUser.Role" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
                            <option value="@UserRole.Recepcionista">Recepcionista</option>
                            <option value="@UserRole.Gerente">Gerente</option>
                            <option value="@UserRole.Admin">Admin</option>
                        </InputSelect>
                    </div>
                </div>
                
                <div class="mt-8 flex justify-end space-x-3">
                    <button type="button" @onclick="CloseModal" class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors font-medium">Cancelar</button>
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium shadow-sm">Salvar</button>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    private List<Usuario>? users;
    private Usuario currentUser = new();
    private string password = "";
    private bool showModal = false;

    // Pagination & Search
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount;
    private string searchTerm = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        var result = await AuthService.GetUsersAsync(currentPage, pageSize, searchTerm);
        users = result.Users;
        totalCount = result.TotalCount;
    }

    private async Task SearchUsers()
    {
        currentPage = 1;
        await LoadUsers();
    }

    private async Task PreviousPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
            await LoadUsers();
        }
    }

    private async Task NextPage()
    {
        if (currentPage * pageSize < totalCount)
        {
            currentPage++;
            await LoadUsers();
        }
    }

    private void OpenAddModal()
    {
        currentUser = new Usuario();
        password = "";
        showModal = true;
    }

    private void EditUser(Usuario user)
    {
        currentUser = new Usuario
        {
            Id = user.Id,
            Nome = user.Nome,
            Email = user.Email,
            Role = user.Role
        };
        password = "";
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
    }

    private async Task SaveUser()
    {
        if (currentUser.Id == 0)
        {
            if (string.IsNullOrEmpty(password))
            {
                // Show error (simplified)
                return;
            }
            await AuthService.CreateUserAsync(currentUser, password);
        }
        else
        {
            await AuthService.UpdateUserAsync(currentUser, string.IsNullOrEmpty(password) ? null : password);
        }
        
        showModal = false;
        await LoadUsers();
    }

    private async Task DeleteUser(int id)
    {
        await AuthService.DeleteUserAsync(id);
        await LoadUsers();
    }

    private string GetRoleBadgeClass(UserRole role)
    {
        return role switch
        {
            UserRole.Admin => "bg-red-100 text-red-700",
            UserRole.Gerente => "bg-purple-100 text-purple-700",
            UserRole.Recepcionista => "bg-green-100 text-green-700",
            _ => "bg-blue-100 text-blue-700"
        };
    }
}
