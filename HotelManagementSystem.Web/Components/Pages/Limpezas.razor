@page "/limpezas"
@attribute [Authorize]
@inject ReservationService ReservationService
@inject RoomService RoomService
@rendermode InteractiveServer
@using HotelManagementSystem.Web.Components.Shared

<div class="w-full px-6 pb-10">
    <div class="flex items-center justify-between mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Gestão de Limpezas</h1>
        <button @onclick="OpenAddModal" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg shadow transition duration-200 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Nova Limpeza
        </button>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="bg-gray-50 border-b border-gray-200 text-xs uppercase text-gray-500 font-semibold">
                    <th class="px-6 py-4">Data</th>
                    <th class="px-6 py-4">Quarto</th>
                    <th class="px-6 py-4">Tipo</th>
                    <th class="px-6 py-4">Responsável</th>
                    <th class="px-6 py-4">Reserva</th>
                    <th class="px-6 py-4">Observações</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                @foreach (var limpeza in limpezas)
                {
                    <tr class="hover:bg-gray-50 transition-colors">
                        <td class="px-6 py-4 text-gray-800">@limpeza.DataLimpeza.ToString("dd/MM/yyyy HH:mm")</td>
                        <td class="px-6 py-4 text-gray-800">Quarto @limpeza.Quarto?.Numero</td>
                        <td class="px-6 py-4">
                            <span class="px-2 py-1 rounded-full text-xs font-semibold @(limpeza.Tipo == "Saída" ? "bg-purple-100 text-purple-700" : "bg-green-100 text-green-700")">
                                @limpeza.Tipo
                            </span>
                        </td>
                        <td class="px-6 py-4 text-gray-600">@limpeza.RealizadoPor</td>
                        <td class="px-6 py-4 text-gray-600">
                            @if (limpeza.Reserva != null)
                            {
                                <span>#@limpeza.ReservaId (@limpeza.Reserva.Hospede?.Nome)</span>
                            }
                            else
                            {
                                <span class="text-gray-400">-</span>
                            }
                        </td>
                        <td class="px-6 py-4 text-gray-600 text-sm">@limpeza.Observacoes</td>
                    </tr>
                }
                @if (!limpezas.Any())
                {
                    <tr>
                        <td colspan="6" class="px-6 py-8 text-center text-gray-500 italic">Nenhuma limpeza registrada.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal de Adição -->
@if (showModal)
{
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 backdrop-blur-sm">
        <div class="bg-white rounded-2xl shadow-xl w-full max-w-md p-6 transform transition-all scale-100">
            <h2 class="text-xl font-bold text-gray-800 mb-4">Nova Limpeza</h2>
            
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">Quarto</label>
                <div class="flex items-center space-x-2">
                    <div class="flex-1 p-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-700 min-h-[42px] flex items-center">
                        @if (selectedRoom != null)
                        {
                            <span>Quarto @selectedRoom.Numero - @selectedRoom.Tipo</span>
                        }
                        else
                        {
                            <span class="text-gray-400 italic">Selecione um quarto</span>
                        }
                    </div>
                    <button type="button" @onclick="() => isSearchVisible = true" class="p-2 bg-blue-100 text-blue-600 rounded-lg hover:bg-blue-200 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </button>
                </div>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">Tipo de Limpeza</label>
                <select @bind="newLimpeza.Tipo" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all">
                    <option value="Diária">Diária</option>
                    <option value="Saída">Saída</option>
                    <option value="Faxina Completa">Faxina Completa</option>
                </select>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">Observações</label>
                <textarea @bind="newLimpeza.Observacoes" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all" rows="3"></textarea>
            </div>

            <div class="flex justify-end space-x-3">
                <button @onclick="() => showModal = false" class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors font-medium">Cancelar</button>
                <button @onclick="SaveLimpeza" disabled="@(selectedRoom == null)" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium shadow-sm disabled:opacity-50 disabled:cursor-not-allowed">Salvar</button>
            </div>
        </div>
    </div>
}

<SearchModal IsVisible="isSearchVisible" 
             Type="SearchModal.SearchType.Room" 
             OnRoomSelected="HandleRoomSelected" 
             OnClose="() => isSearchVisible = false" />

@code {
    [CascadingParameter]
    private Task<AuthenticationState>? authenticationStateTask { get; set; }

    private List<Limpeza> limpezas = new();
    private bool showModal = false;
    private bool isSearchVisible = false;
    private Limpeza newLimpeza = new();
    private Quarto? selectedRoom;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        limpezas = await ReservationService.GetAllCleaningsAsync();
    }

    private void OpenAddModal()
    {
        newLimpeza = new Limpeza();
        selectedRoom = null;
        showModal = true;
    }

    private async Task HandleRoomSelected(Quarto room)
    {
        selectedRoom = room;
        newLimpeza.QuartoId = room.Id;
        isSearchVisible = false;
        
        // Try to find active reservation
        var activeReservation = await ReservationService.GetActiveReservationForRoomAsync(room.Id);
        if (activeReservation != null)
        {
            newLimpeza.ReservaId = activeReservation.Id;
        }
        else
        {
            newLimpeza.ReservaId = null;
        }
    }

    private async Task SaveLimpeza()
    {
        if (selectedRoom == null) return;

        newLimpeza.DataLimpeza = DateTime.Now;
        
        string userId = "Sistema";
        if (authenticationStateTask != null)
        {
            var authState = await authenticationStateTask;
            if (authState.User.Identity?.IsAuthenticated == true)
            {
                userId = authState.User.Identity.Name ?? "Usuário";
            }
        }
        newLimpeza.RealizadoPor = userId;

        await ReservationService.AddCleaningAsync(newLimpeza);
        
        // Se for saída ou faxina, podemos marcar o quarto como limpo se tivéssemos esse status
        // Por enquanto, só registra.
        
        showModal = false;
        await LoadData();
    }
}
